        .atk-padding-small.atk-swatch-lightgray
            .atk-bar.atk-cells.atk-cells-gutter-large
                .atk-cell.atk-text-nowrap
                  a(href='{page}/{/}')
                    img(src='{public}images/logo.png{/}' width="50px")
  .atk-layout-row.atk-layout-fluid
    .atk-layout.atk-layout-cell
      div(class="atk-move-{align}left{/align}" style="width: {width}500px{/width}")
          .atk-layout-column.fluid.atk-padding.atk-jackscrew
            {$Content}
      {$RightSideBar}


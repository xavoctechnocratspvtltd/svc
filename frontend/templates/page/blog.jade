header#bloghome
  .main-nav
    .container
      .navbar-header
        button.navbar-toggle(data-target='.navbar-collapse', data-toggle='collapse', type='button')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='index.html')
          h1
            img.img-responsive(alt='logo', src='images/logo.png')
      .collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-right
          li
            a(href='{$baseurl}#home') Home
          li
            a(href='{$baseurl}#aboutus') About Us
          li
            a(href='{$baseurl}#statistics') Statistics
          li
            a(href='{$baseurl}#toppers') Toppers
          li.active
            a(href='{$baseurl}#blog') Blog
          li
            a(href='{$baseurl}#joinus') Join Us
          li
            a.btn.btn-success(data-toggle="modal" data-target="#svcsignin") Sign in
          #svcsignin.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
            .modal-dialog(role='document')
              .modal-content
                .modal-header
                  button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') ×
                  h4#myModalLabel.modal-title Sign in
                .modal-body
                  .row
                    .col-md-8
                      {login}
                      .form.navbar-form.navbar-left
                        .form-group(style="width:100%")
                          label.control-label User Name
                          .atk-form-row
                            .atk-cell.atk-expand {$email}
                        .form-group(style="width:100%")
                          label.control-label Password
                          {$password}
                        .form-group(style="width:100%;margin-top:10px;")
                          {$FormButtons}
                      {/login}
                    .col-md-4.text-center
                      p Sign in with
                      .btn.btn-block.btn-info Facebook
                      |or
                      .btn.btn-block.btn-danger Google
section#blog
  .container
    .row
      .heading.text-center.col-sm-8.col-sm-offset-2.wow.fadeInUp(data-wow-duration='1200ms', data-wow-delay='300ms')
        h2 Blog Posts
        p
          | Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua ut enim ad minim veniam
      {svc_blog}{/}
// /#blog
section#joinus
  #contact-us.parallax
    .container
      .row
        .heading.text-center.col-sm-8.col-sm-offset-2.wow.fadeInUp(data-wow-duration='1000ms', data-wow-delay='300ms')
          h2 Join Us
          p
            | LorOr just contact us if you need professional implementation of gmarks and SVC at your corporate.
        .row
          .col-sm-6.svc-registration-form
            {registration_form}
            form.atk-form#main-contact-form
              .atk-push
                .atk-push-xsmall
                  label.atk-text-bold Name
                .row.atk-push-xsmall
                  .col-sm-6
                    .atk-form-row
                      .atk-cell.atk-form-field {$name}
                  .col-sm-6
                    .atk-form-row
                      .atk-cell.atk-expand {$surname}
                .atk-push-xsmall
                  label.atk-text-bold Email (username)
                .atk-form-row.atk-push-xsmall
                  .atk-cell.atk-form-field {$email}
                .atk-push-xsmall
                  label.atk-text-bold Password
                .row.atk-push-small
                  .col-sm-6
                    .atk-form-row
                      .atk-cell.atk-expand {$password}
                  .col-sm-6
                    .atk-form-row
                      .atk-cell.atk-expand {$re_password}
                .atk-form-row
                  .atk-cell.atk-expand {$terms}
                .row
                  .col-sm-6 {$FormButtons}
            {/}
          .col-sm-6
            .contact-info.wow.fadeInUp(data-wow-duration='1000ms', data-wow-delay='300ms')
              p
                | Or just contact us if you need professional implementation of gmarks and SVC at your corporate.
              ul.address
                li
                  i.fa.fa-map-marker
                  span  Address:
                  |  2400 South Avenue A
                li
                  i.fa.fa-phone
                  span  Phone:
                  |  +928 336 2000
                li
                  i.fa.fa-envelope
                  span  Email:
                  a(href='mailto:someone@yoursite.com')  support@svc.com
                li
                  i.fa.fa-globe
                  span  Website:
                  a(href='#') www.sitename.com
// /#contact
